<ivysettings>

    <settings defaultResolver="default" />
    
    <caches resolutionCacheDir="${ivy.cache.dir}/resolution" repositoryCacheDir="${ivy.cache.dir}/repository"
        ivyPattern="${ivy.default.pattern}"
        artifactPattern="${ivy.default.pattern}" />

    <resolvers>
        <!-- spring --> 
        <chain name="project">
            <!-- local repository -->
            <filesystem name="local">
                <ivy pattern="${ivy.local.root}/repository/${ivy.default.pattern}" />
                <artifact pattern="${ivy.local.root}/repository/${ivy.default.pattern}" />
            </filesystem>
        	<!-- shared repository -->
            <filesystem name="shared">
                <ivy pattern="${ivy.shared.root}/repository/${ivy.default.pattern}" />
                <artifact pattern="${ivy.shared.root}/repository/${ivy.default.pattern}" />
            </filesystem>
        </chain>
        
        <!-- spring --> 
        <chain name="spring">
            <!-- main release osgi repository --> 
            <url name="com.springsource.repository.bundles.release">
                <ivy pattern="http://repository.springsource.com/ivy/bundles/release/${ivy.default.pattern}" />
                <artifact pattern="http://repository.springsource.com/ivy/bundles/release/${ivy.default.pattern}" />
            </url>
            <!-- externals osgi repository --> 
            <url name="com.springsource.repository.bundles.external">
                <ivy pattern="http://repository.springsource.com/ivy/bundles/external/${ivy.default.pattern}" />
                <artifact pattern="http://repository.springsource.com/ivy/bundles/external/${ivy.default.pattern}" />
            </url>
        </chain>

        <!-- public -->
        <chain name="public">
            <ibiblio name="apache" m2compatible="true" root="http://repo1.maven.org/maven2" />
            <ibiblio name="jboss" m2compatible="true" root="http://repository.jboss.org/maven2" />
            <ibiblio name="java.net" root="http://download.java.net/maven/1/"
                     pattern="[organization]/jars/[module]-[revision].[ext]" />
            <!-- 
            <ibiblio name="ibiblio-maven2" m2compatible="true" root="http://www.ibiblio.org/maven2" />
            <ibiblio name="org-ibiblio" m2compatible="false" root="http://www.ibiblio.org/maven2/org/" pattern="[module]/[artifact]/[revision]/[artifact]-[revision].[ext]" />
             -->
        </chain>
        
        <!-- Scannotation own repository -->
        <ibiblio name="scannotationresolver" m2compatible="true" root="http://scannotation.sf.net/maven2"/>
        <!-- 
        <ibiblio name="scannotationresolver" root="http://repo1.maven.org/maven2"
                 pattern="net/sf/scannotation/[artifact]/[revision]/[module]-[revision].[ext]" />        
         -->
        
        <chain name="default" returnFirst="true" >
            <resolver ref="project" />
            <resolver ref="spring" />
            <resolver ref="public" />
        </chain>        

    </resolvers>
    
    <modules>
        <module organisation="org.scannotation" name="*" resolver="scannotationresolver"/>
    </modules>
    

</ivysettings>
